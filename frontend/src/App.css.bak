/* Global reset */
* { box-sizing: border-box; }
html, body, #root { height: 100%; margin: 0; }

/* Light theme variables (default) */
:root{
  --bg: #f4f7fb;
  --card: #ffffff;
  --muted: #6b7280;
  --text: #0f172a;
  --accent: linear-gradient(90deg,#3b82f6,#7c3aed);
  --btn-bg: #2563eb;
  --shadow: 0 6px 24px rgba(12,18,32,0.08);
}

/* Dark theme variables applied to body when dark class is toggled */
body.dark{
  --bg: #0b1020;
  --card: #0f1726;
  --muted: #9aa4b2;
  --text: #e6eef8;
  --accent: linear-gradient(90deg,#00b4ff,#7c3aed);
  --btn-bg: #0ea5ff;
  --shadow: 0 8px 30px rgba(2,6,23,0.6);
  background: var(--bg);
}

/* Body background uses the variable (so toggling on body works) */
body { font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  background: var(--bg); color: var(--text);
  -webkit-font-smoothing:antialiased; -moz-osx-font-smoothing:grayscale;
}

/* Layout */
.app-container { display:flex; flex-direction:column; min-height:100vh; }
.header{
  display:flex; align-items:center; justify-content:space-between;
  padding:20px 36px; background:transparent;
}
.title { display:flex; gap:14px; align-items:center; }
.logo { font-size:28px; display:inline-block; }
.header h1 { margin:0; font-size:20px; }
.subtitle { color:var(--muted); font-size:12px; margin-top:4px; }

/* Theme button */
.theme-btn {
  background: var(--btn-bg); color:white; border:none; padding:10px 14px; border-radius:10px;
  cursor:pointer; box-shadow: var(--shadow); font-weight:600;
}

/* Main content */
.content{ padding:24px 36px; display:grid; grid-template-columns: 1fr 1fr; gap:24px; flex:1; }

/* Cards */
.task-section, .comment-section {
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0));
  border-radius:14px; padding:20px; box-shadow: var(--shadow); border: 1px solid rgba(255,255,255,0.03);
  background-color: var(--card);
}

/* Inputs */
.input-group { display:flex; gap:10px; margin-bottom:16px; }
.input-group input {
  padding:12px 14px; border-radius:10px; border:1px solid rgba(15,23,42,0.06); background:transparent; color:var(--text);
  flex:1;
}
.input-group input::placeholder { color: var(--muted); }
.primary{
  background: var(--btn-bg); border:none; color:white; padding:10px 16px; border-radius:10px; cursor:pointer; font-weight:600;
  box-shadow: 0 6px 18px rgba(12,18,32,0.08);
}

/* Lists */
.task-list { list-style:none; padding:0; margin:0; max-height:60vh; overflow:auto; }
.task-list li {
  padding:18px; border-radius:10px; margin-bottom:12px; border:1px solid rgba(12,18,32,0.04); background: linear-gradient(180deg, rgba(0,0,0,0.01), transparent);
  cursor:pointer; transition: transform .12s ease, box-shadow .12s ease;
}
.task-list li:hover{ transform: translateY(-3px); box-shadow: 0 10px 30px rgba(12,18,32,0.06); }
.task-list li.selected{ outline:3px solid rgba(56,189,248,0.15); box-shadow: 0 12px 28px rgba(12,18,32,0.08); }

/* Task title & meta */
.task-list h3 { margin:0; font-size:16px; }
.muted { color:var(--muted); margin-top:8px; font-size:13px; }

/* Comments */
.comment-card { padding:16px; border-radius:10px; background:var(--card); border:1px solid rgba(12,18,32,0.04); margin-bottom:12px; }
.comment-text { margin:0 0 8px 0; }
.comment-meta { font-size:13px; color:var(--muted); }

/* No selection */
.no-task { color:var(--muted); font-size:15px; text-align:center; margin-top:40px; }

/* Footer */
footer { padding:14px; text-align:center; font-size:13px; color:var(--muted); background:transparent; }

/* Responsive */
@media (max-width: 900px){
  .content { grid-template-columns: 1fr; padding:16px; }
  .header { padding:14px; }
}
